sync {
  default.rsyncssh,
  source = "<%= @source %>",
  targetdir = "<%= @targetdir %>",
  delete = <%= @delete %>,
  host = "<%= @host %>",
  rsync = {
    <% @rsync_options.each do |key, val| -%>
      <%= key %> = <%= val %>,
    <% end %>
  },
  ssh = {
    <% @ssh_options.each do |key, val| -%>
      <%= key %> = <%= val %>,
    <% end %>
  },
}
